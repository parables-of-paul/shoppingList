<!DOCTYPE html>
<head>
    <title>Paul & Frankie's Shopping List!</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/miscProductAdd.js"></script>
    <link rel="stylesheet" href="styles.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="bootstrapLocal.css">
    <link rel="apple-touch-icon" href="public/apple-touch-icon.png">
</head>

<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4 col-md-4 col-sm-4 mx-auto"></div>
      <div class="col-lg-4 col-md-4 col-sm-4 mx-auto">
        <a href="/"><img src="shoppingicon.png" alt="logo" class="img-fluid mx-auto"></a>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4 mx-auto"></div>
    </div>
  <div class="container-fluid" id="listDisplay">
      <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
          <form style="font-size: 3rem !important; margin-left: auto !important; margin-right: auto !important;">
            <div class="listChooser3000">
            <select id="listchooser" name="listChoice">
              <option value="miscChoice">Misc. Items</option>
              <option value="bathroomChoice">Bathroom Items</option>
              <option value="fruitChoice" class="fruitChoiceClass">Fruit & Veg</option>
              <option value="fridgeChoice">Fridge Items</option>
              <option value="freezerChoice">Freezer Items</option>
              <option value="bakingChoice">Baking Items</option>
            </select>  
          </div>
            <input class="inputSystem" type="text" placeholder="write products here" name="item" required>
              <button class="inputSystem" >Add to list</button>
          </form>
      </div>
    </div>
    <div id="outputList">
    <%- include ('partials/outputList.ejs') %>
  </div>
</body>